<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ChatAppFrontEnd.ViewModels"
             xmlns:views="clr-namespace:ChatAppFrontEnd.Views"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="1000"
             x:Class="ChatAppFrontEnd.Views.SidebarView"
             x:DataType="vm:SidebarViewModel"
             Background="#2b2d31">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
                        
        <ScrollViewer Grid.Row="0" Margin="0, 2.5, 0, 0" VerticalScrollBarVisibility="Hidden">
            <ItemsControl ItemsSource="{Binding Friends}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views:FriendListItemView />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <Grid Grid.Row="1" Background="Black"/>
                
        <ContentControl Grid.Row="1" Content="{Binding BottomViewModel}"/>
    </Grid>
    
</UserControl>